<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
<!-- <link rel="stylesheet" href="css/form.css"> -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
    .checked {
	  color: yellow;
	}
	.fa-star {
	   font-size: 20px;
	}
  </style>
    <title>Document</title>
</head>
<body>
    <div class="container">
    <% if (busInfo != '') { %>
        <% busInfo.forEach(function(user){ %>
            <div style="padding:10px;margin-top: 10px;" class="card" style="width: 18rem;">
                <img style="width: 200px;" src="<%= user.image %>" class="card-img-top" alt="">
                <div class="card-body">
                  <h5 class="card-title"> <strong>BusName :</strong> <%= user.busName %> </h5>
                  <p class="card-text">
                    <strong>Route :</strong> <%= user.route %>
                  </p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"> <strong>Rating :</strong> 
                    <% for(var i=0; i < JSON.stringify(user.rating); i++) {%>
                      <span class="fa fa-star checked"></span>
                   <% } %>
                  </li>
                  <li class="list-group-item"> <strong>Time :</strong> <%= user.time %></li>
                  <li class="list-group-item"><strong>Price :</strong><%= user.price %></li>
                  <li class="list-group-item"><strong>Available Seats :</strong> <%= user.seat %></li>
                </ul>
                <div class="card-body">
                    <a href="<%= user.busName %>" class="btn btn-primary">Book Now</a>
                </div>
              </div>
              <br/><br/>
              <h1 style="text-align: center;">BookBus</h1>
          <div style=" text-align: center">
              <form class="form-data" style="padding: 20px" action="/book" method="POST">  
                  <div style="display: flex; justify-content: space-evenly;flex-wrap: wrap;">
                  <div style="padding: 10px;">
                    <label for="route">userName:</label>
                  <input  type="text" id="userName" name="userName">
                  </div>
                  <div style="padding: 10px;">
                    <label for="route">phoneNumber:</label>
                  <input  type="text" id="phoneNumber" name="phoneNumber">
                  </div>
                  <div style="padding: 10px;">
                    <label for="route">Email:</label>
                  <input type="text" id="Email" name="Email">
                  </div>
                  <div style="padding: 10px;">
                    <label for="route">busName:</label>
                  <input  type="text" id="busName" value="<%= user.busName %>" name="busName"><br>
                  </div>
                  <div style="padding: 10px;">
                    <label for="route">bookSeat:</label>
                  <input type="text" id="bookSeat" name="bookSeat"><br>
                  </div>
                  </div>
                  <input style="margin-top: 10px;text-align: center;" class="btn btn-primary" type="submit" value="Submit">
                  </form>
          </div>
          <% }); %>
      <% } else{ %>
        <div class="toast align-items-center text-white bg-primary border-0" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="d-flex">
              <div class="toast-body">
                No Bus Data Available
              </div>
              <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
             <br/><br/>
        <h1 style="text-align: center;">BookBus</h1>
    <div style=" text-align: center">
        <form class="form-data" style="padding: 20px" action="/book" method="POST">  
            <label for="route">userName:</label>
            <input style="margin: 10px;text-align: center;" type="text" id="userName" name="userName">
            <label for="route">busName:</label>
            <input style="margin: 10px;text-align: center;" type="text" id="busName" name="busName"><br>
            <label for="route">bookSeat:</label>
            <input style="margin: 10px;text-align: center;" type="text" id="bookSeat" name="bookSeat"><br>
            <input style="margin-top: 10px;text-align: center;" class="btn btn-primary" type="submit" value="Submit">
            </form>
    </div>
        <% } %>

    
</div>
</body>
</html>